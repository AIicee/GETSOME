<Window x:Class="KarvilWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KarvilWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="365.5" Width="865">
    <Grid Margin="0,0,-7,-31">
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="292" Margin="10,27,0,0" VerticalAlignment="Top" Width="670">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="21*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="dataGridAfdel1" 
                              HorizontalAlignment="Left" 
                              VerticalAlignment="Top" 
                              RenderTransformOrigin="-3.417,-2" 
                              Height="264" Width="664" MinColumnWidth="70" Grid.ColumnSpan="2" SelectionChanged="dataGridAfdel1_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Navn"/>
                            <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Kunde ID"/>
                            <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Sælger ID" DisplayIndex="6"/>
                            <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Kontaktet"/>
                            <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Note" DisplayIndex="8"/>
                            <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Sælger " DisplayIndex="4"/>
                            <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Dato" DisplayIndex="3"/>
                            <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Tlf. Nr." DisplayIndex="1"/>
                            <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Type" DisplayIndex="2"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <ScrollBar x:Name="scrollBar" HorizontalAlignment="Left" Margin="613,0,0,0" VerticalAlignment="Top" Height="264" Width="21" Grid.Column="1"/>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <ComboBox x:Name="comboBoxAfdeling" 
                  HorizontalAlignment="Left" Margin="712,50,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="comboBoxSælger" 
                  HorizontalAlignment="Left" Margin="712,90,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
